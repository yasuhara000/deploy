<div class ='container '>
    <div class ='row old-content'>
        <h2 class ="old_title">閲覧ランキング TOP5</h2>
            
            <%a = 0%>
            <% @questions.each do |question| %>
                
                <div class="Hochi-box-b ">
                        <span class ="question_pv question_pv_marigin">
                            <%a = a+1 %>
                            <span class="ranking">ランキングNO.<%= a%></span>
                        </span>
                        <span class ="question_pv">
                            ユーザー
                            <%= link_to user_path(question.user) do%>
                                <%= attachment_image_tag question.user, :profile_image,format:'jpeg',size: "40x40",class: 'img-circle ' %>
                                <%= link_to question.user.name,user_path(question.user.id)%>
                        </span>
                        <%end%>
                        <span class ="question_pv">
                            質問
                            <%= link_to question.title,question_path(question.id) %>
                        </span>
                        <span class ="question_pv">
                            pv数
                            <%= question.impressionist_count%>
                        </span>
                </div>
            <%end%>
            <%= paginate @questions, class: "paginate" %>
       
    </div>
</div>