

<div class ="container">
    <div class ="row">
        <h1 lass ='title'>Profile</h1>
        <div class ='col-xs-6 text-center'>
            <div class ='image-engineer'>
                <%= attachment_image_tag @engineer, :profile_image,format:'jpeg',size: "170x170",class:'img-circle' %>
            </div>
            <table class ="e-table">
                        <tr>
                            <td><%= link_to "review",engineer_valuations_path([@engineer]) ,class: "review"%></td>
                        </tr>
                        <tr>
                             <td><span class ="text-engineer">Name</span></td>
                            <td><span class='text-engineer1 text-center'><%=@engineer.nickname%></span></td>
                        </tr>
                        <tr>
                            <td class ="text-engineer">profile</td>
                            <td><span class='text-engineer1'><%=@engineer.profile%></span></td>
                        </tr>
            </table>
            <div class = 'edit-engineer'>
                <% if current_engineer%>
                    <%= link_to "Edit",edit_engineer_path(current_engineer) ,class: "btn btn-primary"%>
                <%end%>
            </div>
        </div>
        
       
        <div class ='col-xs-6 text-center engineer_question'>
            <h2 class ='text-center engineer-question'>Questions</h2>
            <table class ='table'>
                <tr>
                    <td>title</td>
                    <td>answer</td>
                    <td>status</td>
                    
                </tr>
                <% @answers.each do |answer|%>
                <tr> 
                    <td><%= link_to answer.question.title,question_path(answer.question.id)%></td>
                    <td></td>
                    <td> <%= answer.question.status%></td>
                </tr>
                <%end%>
            </table>
            
        </div>
</div>
</div>