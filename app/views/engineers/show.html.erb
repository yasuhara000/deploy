

<div class ="container">
    <div class ="row">
        <h1 lass ='title'>Profile</h1>
        <div class ='col-xs-6 text-center'>
            <div class ='image-engineer'>
                <%= attachment_image_tag @engineer, :profile_image,format:'jpeg',size: "170x170",class:'img-circle' %>
            </div>
            <table class ="">
                <div class ='name-engineer'>
                    <tr>
                        <td><h2>Name</h2></td>
                        <td colspan = '2'><span class='text-engineer'><%=@engineer.nickname%></span></td>
                        
                    </tr>
                </div>
                <tr>
                    <div class = 'profile-engineer'>
                        <td><h2 class='profile-engineer1'>profile</h2></td>
                        <div class ="engineer-profile">
                        <td  class = 'text-center'><span class='text-engineer1'><%=@engineer.profile%></span></td>
                        </div>
                    </div>
                </tr>
            </table>
            <div class = 'edit-engineer'>
            <% if current_engineer%>
                <%= link_to "Edit",edit_engineer_path(current_engineer) ,class: "btn btn-primary"%>
            <%end%>
        </div>
        </div>
        
       
        <div class ='col-xs-6 text-center engineer_question'>
            <h2 class ='text-center engineer-question'>Questions</h2>
            <table class ='table'>
                <tr>
                    <td>title</td>
                    <td>answer</td>
                    <td>status</td>
                    
                </tr>
                <% @answers.each do |answer|%>
                <tr> 
                    <td><%= link_to answer.question.title,question_path(answer.question.id)%></td>
                    <td></td>
                    <td> <%= answer.question.status%></td>
                </tr>
                <%end%>
            </table>
            
        </div>
</div>
</div>