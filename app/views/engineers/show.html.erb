

<div class ="container">
    <div class ="row">
        <h1 lass ='title'>プロフィール</h1>
        <div class ='col-xs-6 text-center'>
            <div class ='image-engineer'>
                <%= attachment_image_tag @engineer, :profile_image,format:'jpeg',size: "170x170",class:'img-circle' %>
            </div>
            <table class ="e-table">
                        <tr>
                            <td><%= link_to "review",engineer_valuations_path([@engineer]) ,class: "review"%></td>
                        </tr>
                        <tr>
                             <td><span class ="text-engineer">名前</span></td>
                            <td><span class='text-engineer1 text-center'><%=@engineer.name%></span></td>
                        </tr>
                        <tr>
                            <td class ="text-engineer">プロフィール</td>
                            <td><span class='text-engineer1'><%=@engineer.profile%></span></td>
                        </tr>
            </table>
            <div class = 'edit-engineer'>
                <% if current_engineer%>
                    <%= link_to "編集",edit_engineer_path(current_engineer) ,class: "btn btn-primary"%>
                <%end%>
            </div>
        </div>
        <div class ='col-xs-6 text-center engineer_question'>
            <h2 class ='text-center engineer-question'>回答した質問一覧</h2>
            <table class ='table'>
                <tr>
                    <td>タイトル</td>
                    <td>回答</td>
                    <td>status</td>
                </tr>
                <% @answers.each do |answer|%>
                    <tr> 
                        <td><%= link_to answer.question.title,question_path(answer.question.id)%></td>
                        <td><%= link_to answer.title,answer_path(answer.id)%></td>
                        <td> <%= answer.question.status%></td>
                    </tr>
                <%end%>
            </table>
        </div>
    </div>
</div>