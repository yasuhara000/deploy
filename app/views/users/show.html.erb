<div class ="container user-container">
    <div class ="row">
        <h1 lass ='title'>プロフィール</h1>
        <div class ='col-xs-6 '>
            <div class ='image-user text-center'>
                    <%= attachment_image_tag @user, :profile_image,format:'jpeg',size: "170x170",class:'img-circle ' %>
            </div>
            <table class ="e-table">
                    <tr>
                        <td><span class ="text-engineer">名前</span></td>
                    <td class ="text-center"> <span class='text-engineer1 '><%=@user.name%></span></td>
                    </tr>
                    <tr>
                        <td class ="text-engineer">プロフィール</td>
                        <td><span class='text-engineer1'><%=@user.profile%></span></td>
                    </tr>
                   
                        <div class = 'edit-engineer'>
                            <tr>
                                <% if current_user%>
                                        <td></td>
                                        <td > <%= link_to "編集",edit_user_path(current_user) ,class: "btn btn-primary "%></td>
                                <%end%>
                            </tr>
                        </div>
            </table>
        </div>
        <div class ='col-xs-6 text-center'>
            <h2 class ='text-center user-question'><%= @user.name %>の質問</h2>
            <table class ='table'>
                <tr>
                    <td>タイトル</td>
                    <td>回答数</td>
                    <td></td>
                </tr>
                <% @questions.each do |f|%>
                    <tr> 
                        <td><%= link_to f.title,question_path(f.id),class:'question'%></td>
                        <td> <%= f.answers.count%></td>
                        <td><%= f.status%>
                    </tr>
                <%end%>
            </table>
        </div>
    </div>
</div>