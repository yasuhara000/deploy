<div class ="container">
    <div class ="row">
        <h1 lass ='title'>Profile</h1>
        <div class ='col-xs-6 text-center'>
        <div class ='image-user'>
            <%= attachment_image_tag @user, :profile_image,format:'jpeg',size: "170x170",class:'img-circle' %>
        </div>
        <div class ='name-user'>
            <h2>Name</h2>
            <span class='text-user'><%=@user.nickname%></span>
        </div>
        <div class = 'profile-user'>
            <h2 class='profile'>profile</h2>
            <span class='text-user'><%=@user.profile%></span>
        </div>
        <div class = 'edit-user'>
            <% if current_user%>
                <%= link_to "Edit",edit_user_path(current_user) ,class: "btn btn-primary"%>
            <%end%>
        </div>
        </div>
        <div class ='col-xs-6 text-center'>
        <h2 class ='text-center user-question'>Questions</h2>
        <table class ='table'>
        <tr>
            <td>title</td>
            <td>status</td>
            <td>answer</td>
        </tr>
        <% @questions.each do |f|%>
        <tr> 
            <td><%= link_to f.title,question_path(f.id),class:'question'%></td>
            <td> <%= f.status%></td>
            <td><%= f.answers.count%>
        </tr>
        <%end%>
        </table>
        </div>
</div>
</div>